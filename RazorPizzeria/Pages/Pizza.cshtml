@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">CustomPizza</a>
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our superb pizzeria</h1>
        <h4>Make a pizza for yourself or everyone else.</h4>
        <h4>We operate on total magic, so you don't even need to give us your address!</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create a pizza</h3>
                            <p style="text-align:left">Make a pizza using this pizza maker</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Deliver it</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
